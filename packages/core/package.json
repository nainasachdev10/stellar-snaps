{
  "name": "@stellar-snaps/sdk",
  "version": "0.3.2",
  "description": "SDK for building on Stellar Snaps - payment links, transactions, wallet integration",
  "license": "MIT",
  "author": "Stellar Snaps Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/AquaToken/stellar-snaps"
  },
  "keywords": [
    "stellar",
    "blockchain",
    "payments",
    "sep-0007",
    "freighter",
    "cryptocurrency",
    "web3"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@stellar/freighter-api": "^6.0.0",
    "@stellar/stellar-sdk": "^13.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@stellar/freighter-api": "^6.0.1",
    "@stellar/stellar-sdk": "^13.0.0",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "tsup": "^8.0.0",
    "typescript": "5.9.2",
    "vitest": "^2.0.0"
  }
}
